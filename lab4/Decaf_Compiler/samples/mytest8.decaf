class main
{
  void main() {
  int n;
  int c;
  
  c = 0;
  Print("Enter a number: ");
  n = ReadInteger();
  while(n > 1) {
    if(n % 2 == 0) {
      Print(n, " is even, so we halve it: ", (n / 2), "\n");
      n = n / 2;
    } else {
      Print(n, " is odd, so we 3n + 1: ", (3 * n + 1), "\n");
      n = 3 * n + 1;
    }
    c++;
  }
  Print("It took ", c, " step(s) to reach 1.");
}
}


